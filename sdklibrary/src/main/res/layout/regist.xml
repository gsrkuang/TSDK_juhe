<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/shape_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goback"
            android:background="@drawable/gamesdk_goback"
            android:layout_width="38dp"
            android:scaleX="0.65"
            android:scaleY="0.65"
            android:layout_height="40dp" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#fff"
            android:text="账 号 注 册"/>

    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#e7e7e7"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_height="148dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/shape_login"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/gamesdk_heart"
                android:paddingRight="3dp"
                android:scaleX="0.7" />

            <EditText
                android:id="@+id/registusername"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="6"
                android:background="@null"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_"
                android:hint="请输入注册账号/手机号:"
                android:maxLength="15"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="46dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_login"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleX="0.6"
                android:scaleY="0.9"
                android:paddingRight="3dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/gamesdk_pwd_icon"
                android:layout_height="32dp" />

            <EditText
                android:id="@+id/registerpassword"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_"
                android:layout_height="match_parent"
                android:hint="请输入密码:"
                android:password="true"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@null"
                android:maxLength="15"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="46dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_login">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleX="0.7"
                android:paddingRight="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/gamesdk_pwd"
                android:layout_height="32dp" />

            <EditText
                android:id="@+id/secondpwd"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_"
                android:layout_height="match_parent"
                android:hint="请再次输入密码:"
                android:password="true"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@null"
                android:maxLength="15"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>






    </LinearLayout>



    <Button
        android:id="@+id/regist"
        android:text="注 册"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="2dp"
        />

</LinearLayout>